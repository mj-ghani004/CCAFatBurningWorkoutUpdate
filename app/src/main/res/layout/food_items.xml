<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    app:cardCornerRadius="@dimen/margin_8"
    android:background="#eee">

    <RelativeLayout
        android:id="@+id/relativeLayout_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/imageView_foodListItem"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/startbg"

            android:layout_marginLeft="@dimen/margin_8"/>


        <TextView

            android:id="@+id/textView_titleFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potatos"
            android:layout_toRightOf="@id/imageView_foodListItem"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_red_light"


            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"

            />
        <TextView

            android:id="@+id/textView_descFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potatos Potatos Potatos Potatos Potatos Potatos  Potatos Potatos Potatos Potatos Potatos Potatos Potatos Potatos Potatos Potatos Potatos"
            android:fontFamily="sans-serif-light"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLines="1"
            android:ellipsize="end"

            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toRightOf="@id/imageView_foodListItem"
            android:layout_below="@id/textView_titleFood"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_4"



            />


    </RelativeLayout>




</android.support.v7.widget.CardView>

