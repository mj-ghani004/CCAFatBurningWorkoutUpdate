<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    app:cardCornerRadius="@dimen/margin_8"
    android:layout_margin="@dimen/margin_4">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageView_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
           />


        <ImageView

            android:id="@+id/imageViewExr_trainingItem"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/wings_1"
            android:scaleType="centerInside"

             />


        <TextView

            android:id="@+id/textViewExr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chest"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"

            android:layout_toRightOf="@id/imageViewExr_trainingItem"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="@dimen/margin_4"

            android:layout_marginStart="@dimen/margin_4"
            android:layout_toEndOf="@id/imageViewExr_trainingItem" />

        <TextView

            android:id="@+id/textViewExr_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This results in higher and relatively larger-looking breasts, improving their shape"
            android:fontFamily="sans-serif-light"
            android:textAppearance="?android:attr/textAppearanceSmall"

            android:layout_below="@id/textViewExr_name"
            android:layout_toRightOf="@id/imageViewExr_trainingItem"
            android:textSize="12sp"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_4" />




    </RelativeLayout>


</android.support.v7.widget.CardView>